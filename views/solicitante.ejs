    </div>

    <h1 class="h1"style="text-align:center"> Sistema de Reservas</h1>
    
    <table class="table_equipo">
      <tr>
        <th>ID</th>
        <th>Nombre y Apellido</th>
        <th>Fecha Nacimiento</th>
        <th>Dirección</th>
        <th>Username</th>
        <th>Clave</th>
        <th>Número de Telefono</th>
      </tr>
      <% respuesta.forEach(r => { %>
        <tr>
          <td><%= r.id %></td>
          <td><%= r.nombre_apellido %></td>
          <td><%= r.fecha_nacimiento %></td>
          <td><%= r.direccion %></td>
          <td><%= r.username %></td>
          <td><%= r.clave %></td>
          <td><%= r.telefono %></td>
        </tr>
      <% }) %>
    </table>
  </body>
